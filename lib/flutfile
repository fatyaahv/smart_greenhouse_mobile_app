void main() {
  runApp(const SmartGreensApp());
}

class SmartGreensApp extends StatelessWidget {
  const SmartGreensApp({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'SmartGreens',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        primarySwatch: Colors.green,
        primaryColor: const Color(0xFF22C55E),
        scaffoldBackgroundColor: const Color(0xFFF0FDF4),
        fontFamily: 'Poppins',
        appBarTheme: const AppBarTheme(
          backgroundColor: Colors.white,
          elevation: 2,
          iconTheme: IconThemeData(color: Colors.black87),
          titleTextStyle: TextStyle(
            color: Colors.black87,
            fontSize: 20,
            fontWeight: FontWeight.bold,
          ),
        ),
      ),
      home: const SplashScreen(),
    );
  }
}

// ============================================
// models/sensor_data.dart
// ============================================

class SensorData {
  final double temperature;
  final double humidity;
  final double soilMoisture;
  final DateTime timestamp;

  SensorData({
    required this.temperature,
    required this.humidity,
    required this.soilMoisture,
    required this.timestamp,
  });

  // Firebase entegrasyonu için factory constructor
  factory SensorData.fromMap(Map<String, dynamic> map) {
    return SensorData(
      temperature: (map['temperature'] ?? 0.0).toDouble(),
      humidity: (map['humidity'] ?? 0.0).toDouble(),
      soilMoisture: (map['soilMoisture'] ?? 0.0).toDouble(),
      timestamp: map['timestamp'] != null 
          ? DateTime.parse(map['timestamp'])
          : DateTime.now(),
    );
  }

  // Firebase'e kaydetmek için map dönüşümü
  Map<String, dynamic> toMap() {
    return {
      'temperature': temperature,
      'humidity': humidity,
      'soilMoisture': soilMoisture,
      'timestamp': timestamp.toIso8601String(),
    };
  }
}

// ============================================
// models/device_state.dart
// ============================================

class DeviceState {
  final bool fan;
  final bool heater;
  final bool irrigation;
  final bool light;

  DeviceState({
    required this.fan,
    required this.heater,
    required this.irrigation,
    required this.light,
  });

  factory DeviceState.fromMap(Map<String, dynamic> map) {
    return DeviceState(
      fan: map['fan'] ?? false,
      heater: map['heater'] ?? false,
      irrigation: map['irrigation'] ?? false,
      light: map['light'] ?? false,
    );
  }

  Map<String, dynamic> toMap() {
    return {
      'fan': fan,
      'heater': heater,
      'irrigation': irrigation,
      'light': light,
    };
  }

  DeviceState copyWith({
    bool? fan,
    bool? heater,
    bool? irrigation,
    bool? light,
  }) {
    return DeviceState(
      fan: fan ?? this.fan,
      heater: heater ?? this.heater,
      irrigation: irrigation ?? this.irrigation,
      light: light ?? this.light,
    );
  }
}

// ============================================
// models/notification_model.dart
// ============================================

class NotificationModel {
  final String id;
  final String message;
  final String time;
  final String type; // 'info', 'warning', 'error'

  NotificationModel({
    required this.id,
    required this.message,
    required this.time,
    required this.type,
  });

  factory NotificationModel.fromMap(Map<String, dynamic> map) {
    return NotificationModel(
      id: map['id'] ?? '',
      message: map['message'] ?? '',
      time: map['time'] ?? '',
      type: map['type'] ?? 'info',
    );
  }

  Map<String, dynamic> toMap() {
    return {
      'id': id,
      'message': message,
      'time': time,
      'type': type,
    };
  }
}

// ============================================
// services/data_service.dart
// Firebase entegrasyonu için hazır servis katmanı
// ============================================

class DataService {
  // Singleton pattern
  static final DataService _instance = DataService._internal();
  factory DataService() => _instance;
  DataService._internal();

  // Simüle edilmiş veri - Firebase bağlantısı kurulduğunda burası değişecek
  SensorData _currentSensorData = SensorData(
    temperature: 24.5,
    humidity: 65.0,
    soilMoisture: 45.0,
    timestamp: DateTime.now(),
  );

  DeviceState _currentDeviceState = DeviceState(
    fan: false,
    heater: false,
    irrigation: false,
    light: false,
  );

  final List<NotificationModel> _notifications = [
    NotificationModel(
      id: '1',
      message: 'Sıcaklık normal seviyede',
      time: '5 dk önce',
      type: 'info',
    ),
    NotificationModel(
      id: '2',
      message: 'Toprak nemi düşük',
      time: '15 dk önce',
      type: 'warning',
    ),
  ];

  // Sensor data stream - Firebase'den veri geldiğinde burada broadcast edilecek
  Stream<SensorData> getSensorDataStream() async* {
    // Firebase entegrasyonu için: FirebaseDatabase.instance.ref('sensorData').onValue
    while (true) {
      await Future.delayed(const Duration(seconds: 3));
      // Simüle edilmiş veri güncellemesi
      _currentSensorData = SensorData(
        temperature: _currentSensorData.temperature + (0.5 - (DateTime.now().millisecond % 100) / 100),
        humidity: (_currentSensorData.humidity + (DateTime.now().millisecond % 5 - 2)).clamp(40, 80),
        soilMoisture: (_currentSensorData.soilMoisture + (DateTime.now().millisecond % 6 - 3)).clamp(20, 80),
        timestamp: DateTime.now(),
      );
      yield _currentSensorData;
    }
  }

  // Device state stream
  Stream<DeviceState> getDeviceStateStream() async* {
    // Firebase entegrasyonu için: FirebaseDatabase.instance.ref('deviceState').onValue
    yield _currentDeviceState;
  }

  // Device kontrolü için method
  Future<void> updateDeviceState(String device, bool state) async {
    // Firebase entegrasyonu için: FirebaseDatabase.instance.ref('deviceState/$device').set(state)
    switch (device) {
      case 'fan':
        _currentDeviceState = _currentDeviceState.copyWith(fan: state);
        break;
      case 'heater':
        _currentDeviceState = _currentDeviceState.copyWith(heater: state);
        break;
      case 'irrigation':
        _currentDeviceState = _currentDeviceState.copyWith(irrigation: state);
        break;
      case 'light':
        _currentDeviceState = _currentDeviceState.copyWith(light: state);
        break;
    }
    // Simülasyon için kısa gecikme
    await Future.delayed(const Duration(milliseconds: 300));
  }

  // Bildirimler
  List<NotificationModel> getNotifications() {
    return _notifications;
  }

  // Eşik değerleri güncelleme - Firebase'e kaydedilecek
  Future<void> updateThresholds({
    double? maxTemp,
    double? minSoilMoisture,
    double? targetHumidity,
  }) async {
    // Firebase entegrasyonu için: FirebaseDatabase.instance.ref('settings/thresholds').update({...})
    await Future.delayed(const Duration(milliseconds: 500));
  }
}

// ============================================
// screens/splash_screen.dart
// ============================================

class SplashScreen extends StatefulWidget {
  const SplashScreen({Key? key}) : super(key: key);

  @override
  State<SplashScreen> createState() => _SplashScreenState();
}

class _SplashScreenState extends State<SplashScreen> {
  @override
  void initState() {
    super.initState();
    Future.delayed(const Duration(seconds: 2), () {
      Navigator.pushReplacement(
        context,
        MaterialPageRoute(builder: (context) => const MainScreen()),
      );
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Container(
        decoration: const BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topLeft,
            end: Alignment.bottomRight,
            colors: [Color(0xFF22C55E), Color(0xFF10B981)],
          ),
        ),
        child: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Container(
                padding: const EdgeInsets.all(24),
                decoration: BoxDecoration(
                  color: Colors.white,
                  borderRadius: BorderRadius.circular(24),
                ),
                child: const Icon(
                  Icons.eco,
                  size: 80,
                  color: Color(0xFF22C55E),
                ),
              ),
              const SizedBox(height: 24),
              const Text(
                'SmartGreens',
                style: TextStyle(
                  fontSize: 32,
                  fontWeight: FontWeight.bold,
                  color: Colors.white,
                ),
              ),
              const SizedBox(height: 8),
              const Text(
                'Akıllı Sera Yönetim Sistemi',
                style: TextStyle(
                  fontSize: 16,
                  color: Colors.white70,
                ),
              ),
              const SizedBox(height: 40),
              const CircularProgressIndicator(
                valueColor: AlwaysStoppedAnimation<Color>(Colors.white),
              ),
            ],
          ),
        ),
      ),
    );
  }
}

